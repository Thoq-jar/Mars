<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mars="clr-namespace:Mars"
             x:Class="Mars.MainPage"
             BackgroundColor="DarkSlateBlue">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="ForecastLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="Black" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout
            Padding="20,0"
            Spacing="20"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand">
            
            <Label
                x:Name="PageTitle"
                Text="Mars Weather"
                FontSize="25"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <!-- ReSharper disable once ObsoleteElement -->
            <Frame
                BackgroundColor="Transparent"
                CornerRadius="20"
                HasShadow="True"
                Padding="0">
                <SearchBar
                    x:Name="LocationSearchBar"
                    Placeholder="Enter location"
                    HorizontalOptions="FillAndExpand"
                    SearchButtonPressed="OnSearchEvent"
                    BackgroundColor="DarkSlateBlue" />
            </Frame>
            
            <Label
                x:Name="Status"
                FontSize="15"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Image
                x:Name="WeatherIcon"
                HeightRequest="150"
                Aspect="AspectFit"
                SemanticProperties.Description="Current weather icon"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label
                x:Name="Temperature"
                FontSize="15"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label
                x:Name="Humidity"
                FontSize="15"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label
                x:Name="Condition"
                FontSize="15"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label
                x:Name="WindSpeed"
                FontSize="15"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label
                x:Name="Precipitation"
                FontSize="15"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label
                x:Name="ForecastLabel"
                FontSize="15"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <CollectionView x:Name="ForecastCollectionView"
                            HorizontalOptions="Center"
                            VerticalOptions="CenterAndExpand"
                            x:DataType="mars:DailyForecast">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label
                                Text="{Binding Weekday}"
                                FontSize="{Binding FontSize}"
                                TextColor="{Binding FontColor}"
                                Style="{StaticResource ForecastLabelStyle}"
                                HorizontalOptions="StartAndExpand" />

                            <Label
                                Text="{Binding WeatherCondition}"
                                TextColor="{Binding FontColor}"
                                FontSize="{Binding FontSize}"
                                Style="{StaticResource ForecastLabelStyle}"
                                HorizontalOptions="StartAndExpand" />

                            <Label
                                Text="{Binding MaxTemp, StringFormat='Max: {0:F2}°F'}"
                                TextColor="{Binding FontColor}"
                                FontSize="{Binding FontSize}"
                                Style="{StaticResource ForecastLabelStyle}"
                                HorizontalOptions="EndAndExpand" />

                            <Label
                                Text="{Binding MinTemp, StringFormat='Min: {0:F2}°F'}"
                                TextColor="{Binding FontColor}"
                                FontSize="{Binding FontSize}"
                                Style="{StaticResource ForecastLabelStyle}"
                                HorizontalOptions="EndAndExpand" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>